@using Microsoft.AspNetCore.Components.Authorization
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(AdmSchoolApp.Web.Shared.MainLayout)">
                <NotAuthorized>
                    <div class="m-4">
                        <p>Você precisa entrar para acessar essa página.</p>
                        <button class="btn btn-primary" @onclick="GoLogin">Ir para Login</button>
                    </div>
                </NotAuthorized>
            </AuthorizeRouteView>
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(AdmSchoolApp.Web.Shared.MainLayout)">
                <p>Página não encontrada.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>

@code {
    [Inject] NavigationManager Navigation { get; set; } = null!;
    void GoLogin() => Navigation.NavigateTo("/login");
}
