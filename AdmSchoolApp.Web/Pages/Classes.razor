@page "/classes"
@using AdmSchoolApp.Domain.Models.Responses
@attribute [Authorize]
@inject IApiService Api
@inject IJSRuntime Js

<h3>Turmas</h3>
<div class="card card-dark p-3">
    <div class="table-responsive">
        <table class="table table-striped table-dark" id="classesTable">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Alunos</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var c in _classes)
                {
                    <tr>
                        <td>@c.Name</td>
                        <td>@c.Description</td>
                        <td>@c.StudentCount</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private List<ClassWithStudentCountResponse> _classes = [];

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var res = await Api.GetClassesAsync(1, 100);
            _classes = res.Data?.Items.ToList() ?? [];
        }
        catch
        {
            _classes = [];
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Js.InvokeVoidAsync("initDataTable", "#classesTable");
        }
    }
}
