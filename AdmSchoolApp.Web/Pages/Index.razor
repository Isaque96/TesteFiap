@page "/"
@inject IApiService Api
@inject IJSRuntime Js

<h3>Dashboard</h3>
<div class="row mb-4">
    <div class="col-md-6">
        <div class="card card-dark p-3">
            <h5>Alunos cadastrados</h5>
            <p class="display-6">@_studentsCount</p>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card card-dark p-3">
            <h5>Turmas</h5>
            <p class="display-6">@_classesCount</p>
        </div>
    </div>
</div>

<div class="card card-dark p-3">
    <h5>Ãšltimos alunos</h5>
    <div class="table-responsive">
        <table class="table table-striped table-dark" id="recentStudents">
            <thead><tr><th>Nome</th><th>Email</th><th>CPF</th></tr></thead>
            <tbody>
                @if (_recentStudents != null)
                {
                    foreach(var s in _recentStudents)
                    {
                        <tr>
                            <td>@s.Name</td>
                            <td>@s.Email</td>
                            <td>@s.Cpf</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    private int _studentsCount = 0;
    private int _classesCount = 0;
    private List<dynamic>? _recentStudents;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var st = await Api.GetStudentsAsync(1,5);
            _studentsCount = st?.Data?.TotalCount ?? 0;
            _recentStudents = st?.Data?.Items?.Select(i => new { Name = i.Name, Email = i.Email, Cpf = i.Cpf }).Cast<dynamic>().ToList();

            var cl = await Api.GetClassesAsync(1,5);
            _classesCount = cl?.Data?.TotalCount ?? 0;
        }
        catch
        {
            // ignore - API might be down
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await Js.InvokeVoidAsync("initDataTable", "#recentStudents");
        }
    }
}
