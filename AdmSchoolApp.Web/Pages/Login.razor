@page "/login"
@using AdmSchoolApp.Domain.Models.Requests
@using AdmSchoolApp.Web.Providers
@using AdmSchoolApp.Web.Services
@using AdmSchoolApp.Web.Shared
@using Microsoft.AspNetCore.Components.Authorization
@layout LoginLayout
@inject IAuthService AuthService
@inject NavigationManager Navigation
@inject AuthenticationStateProvider AuthStateProvider

<div class="login-container">
    <div class="card login-card">
        <div class="card-body p-5">
            <div class="text-center mb-4">
                <i class="fas fa-graduation-cap fa-4x text-primary mb-3"></i>
                <h3 class="card-title">Sistema Administrativo</h3>
                <p class="text-muted">Escola FIAP</p>
            </div>

            @if (!string.IsNullOrEmpty(_errorMessage))
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-circle me-2"></i>@_errorMessage
                </div>
            }

            <EditForm Model="@_loginModel" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                
                <div class="mb-3">
                    <label for="email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>Email
                    </label>
                    <InputText id="email" class="form-control form-control-lg" 
                               @bind-Value="_loginModel.Email" 
                               placeholder="seu@email.com" />
                    <ValidationMessage For="@(() => _loginModel.Email)" />
                </div>

                <div class="mb-4">
                    <label for="password" class="form-label">
                        <i class="fas fa-lock me-2"></i>Senha
                    </label>
                    <InputText id="password" type="password" class="form-control form-control-lg" 
                               @bind-Value="_loginModel.Password" 
                               placeholder="••••••••" />
                    <ValidationMessage For="@(() => _loginModel.Password)" />
                </div>

                <button type="submit" class="btn btn-primary btn-lg w-100" disabled="@_isLoading">
                    @if (_isLoading)
                    {
                        <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                        <span>Entrando...</span>
                    }
                    else
                    {
                        <i class="fas fa-sign-in-alt me-2"></i>
                        <span>Entrar</span>
                    }
                </button>
            </EditForm>
        </div>
    </div>
</div>

@code {
    private readonly LoginRequests _loginModel = new LoginRequests();
    private string? _errorMessage;
    private bool _isLoading;

    private async Task HandleLogin()
    {
        _isLoading = true;
        _errorMessage = null;

        try
        {
            var result = await AuthService.LoginAsync(_loginModel);

            if (result != null)
            {
                var authStateProvider = (CustomAuthenticationStateProvider)AuthStateProvider;
                authStateProvider.NotifyAuthenticationStateChanged();
                
                Navigation.NavigateTo("/");
            }
            else
            {
                _errorMessage = "Email ou senha inválidos.";
            }
        }
        catch (Exception)
        {
            _errorMessage = "Erro ao conectar com o servidor. Tente novamente.";
        }
        finally
        {
            _isLoading = false;
        }
    }
}