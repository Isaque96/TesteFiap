@inject NavigationManager Navigation
@inject IAuthService AuthService
@inject AuthenticationStateProvider AuthStateProvider

<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container-fluid">
        <NavLink class="navbar-brand" href="/">AdminSchool</NavLink>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navmenu">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navmenu">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="/" Match="NavLinkMatch.All">Home</NavLink>
                </li>

                <AuthorizeView>
                    <Authorized Context="authState">
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/students">Alunos</NavLink>
                        </li>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/classes">Turmas</NavLink>
                        </li>
                    </Authorized>
                    <NotAuthorized>
                        <li class="nav-item">
                            <NavLink class="nav-link" href="/login">Login</NavLink>
                        </li>
                    </NotAuthorized>
                </AuthorizeView>
            </ul>

            <ul class="navbar-nav">
                <AuthorizeView>
                    <Authorized Context="authState">
                        <li class="nav-item">
                            <span class="navbar-text me-2">Ol√°, @authState.User.Identity?.Name</span>
                        </li>
                        <li class="nav-item">
                            <button class="btn btn-outline-light btn-sm" @onclick="LogoutAsync">Logout</button>
                        </li>
                    </Authorized>
                </AuthorizeView>
            </ul>
        </div>
    </div>
</nav>

@code {
    private async Task LogoutAsync()
    {
        await AuthService.LogoutAsync();
        if (AuthStateProvider is CustomAuthenticationStateProvider custom)
        {
            await custom.InitializeAsync();
        }
        Navigation.NavigateTo("/login", true);
    }
}
